
@model Wyjazdy.Models.OrderFormModel
@Html.ValidationSummary(true)

<h2>Dodawanie ekspedycji</h2>

<form asp-action="Create" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label>Wybierz tramwaj:</label>
        @for (int i = 0; i < Model.Tramwaje.Count; i++)
        {
            <div class="form-check">
                <input asp-for="Tramwaje[i].IsSelected" class="form-check-input" type="radio"
                       name="SelectedProductId" value="@Model.Tramwaje[i].Id" />
                <label class="form-check-label">@Model.Tramwaje[i].NazwaTramwaju</label>
                @Html.HiddenFor(model => model.Tramwaje[i].NazwaTramwaju)
            </div>
        }
    <div class="form-group">
        <label asp-for="uwagi">Nr motorniczego, linia oraz brygada (1435, 16/8):</label>
        <textarea asp-for="uwagi" class="form-control"></textarea>
        <span asp-validation-for="uwagi" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Wyślij do zatwierdzenia</button>
</form>
