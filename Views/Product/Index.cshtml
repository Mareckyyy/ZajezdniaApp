@model ProductIndexViewModel

<div class="container">
    <div class="row">

        <div class="col-md-6">
            <h2>Lista tramwajów</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Model tramwaju</th>
                        <th></th> 
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Pojazdy)
                    {
                        <tr>
                            <td>@item.NazwaTramwaju</td>
                            <td>
                                <form asp-action="Delete" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-danger">Usuń</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

       

        <div class="col-md-6">
            <h2>Dodaj Nowy tramwaj</h2>
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="NowyPrzedmiot.NazwaTramwaju" class="control-label"></label>
                    <input asp-for="NowyPrzedmiot.NazwaTramwaju" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary">Dodaj</button>
            </form>

            <h2>Importuj pojazdy z pliku</h2>
            <form asp-action="Import" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="fileUpload" class="control-label">Wybierz plik tekstowy:</label>
                    <input type="file" class="form-control-file" id="fileUpload" name="fileUpload" accept=".txt">
                </div>
                <button type="submit" class="btn btn-secondary">Importuj</button>
            </form>
        </div>
  
        </div>
    </div>
</div>
